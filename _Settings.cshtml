<div id="settingsMenu" class="modal pe-3" data-bs-backdrop="false" role="dialog" tabindex="-1">
    <div class="modal-dialog m-0" role="document">
        <div class="modal-content">
            <div class="modal-header p-2">
                <h5 class="modal-title">Settings</h5>
            </div>

            <div class="modal-body">
                <div id="volumeContainer">
                    Notification Volume
                    <div class="range">
                        <input type="range" id="livestreamNotificationRange" class="form-range" min="0" max="1" step="0.01" onchange="changeVolume(this.value)" />
                    </div>
                </div>

                <div id="dataThemeTogglerContainer" class="pt-4">
                    <img src="@SupportingUtilitiesWebsite.Classes.Globals.GetHostName(Context.Request.Host.Value)/icons/star-solid.svg" id="lightModeIcon" class="me-2" />
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" onclick="toggleDarkMode()" id="dataThemeSwitch">
                    </div>
                    <img src="@SupportingUtilitiesWebsite.Classes.Globals.GetHostName(Context.Request.Host.Value)/icons/moon-solid.svg" id="darkModeIcon" class="ms-2" />
                </div>
            </div>
        </div>
    </div>
</div>